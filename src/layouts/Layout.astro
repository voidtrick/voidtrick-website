---
import 'remixicon/fonts/remixicon.css';
import '@styles/style.css';
import '@styles/variables.css';
import '@styles/inter.css';
import '@styles/montserrat.css';
import { Picture } from 'astro:assets';
import bgDark from '@assets/images/bg-dark.jpg';
import bgLight from '@assets/images/bg-light.jpg';
import Footer from '@components/Footer.astro';

const { title = 'Voidtrick' } = Astro.props;
---

<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <link rel='me' href='https://mastodon.social/@voidtrick' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='viewport' content='width=device-width' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class='bg-image-container'>
      <Picture
        decoding='async'
        loading='lazy'
        class='bg-image bg-image-dark'
        src={bgDark}
        alt=''
        formats={['avif', 'webp']}
      />
      <Picture
        decoding='async'
        loading='lazy'
        class='bg-image bg-image-light'
        src={bgLight}
        alt=''
        formats={['avif', 'webp']}
      />
    </div>
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>
