---
import Layout from '@layouts/Layout.astro';
import links from '@content/links.json';
import Link from '@components/Link.astro';

const socialLinks = links.social;
const devLinks = links.dev;
const mediaLinks = links.media;
const supportLinks = links.support;
const communityLinks = links.community;
---

<style>
  ul {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;

    width: 100%;
    max-width: 10rem;

    list-style-type: none;
    padding: 0;
  }

  li {
    width: 100%;
  }
</style>

<Layout title='Voidtrick'>
  <h1>Voidtrick</h1>
  <p>Hello, world.</p>
  <h3>Social</h3>
  <ul>
    {
      socialLinks.map((link) => (
        <li>
          <Link
            url={link.url}
            label={link.label}
            external={link.external}
            icon={link.icon}
          />
        </li>
      ))
    }
  </ul>
  <h3>Media</h3>
  <ul>
    {
      mediaLinks.map((link) => (
        <li>
          <Link
            url={link.url}
            label={link.label}
            external={link.external}
            icon={link.icon}
          />
        </li>
      ))
    }
  </ul>
  <h3>Development</h3>
  <ul>
    {
      devLinks.map((link) => (
        <li>
          <Link
            url={link.url}
            label={link.label}
            external={link.external}
            icon={link.icon}
          />
        </li>
      ))
    }
  </ul>
  <h3>Community</h3>
  <ul>
    {
      communityLinks.map((link) => (
        <li>
          <Link
            url={link.url}
            label={link.label}
            external={link.external}
            icon={link.icon}
          />
        </li>
      ))
    }
  </ul>
  <h3>Support</h3>
  <ul>
    {
      supportLinks.map((link) => (
        <li>
          <Link
            url={link.url}
            label={link.label}
            external={link.external}
            icon={link.icon}
          />
        </li>
      ))
    }
  </ul>
</Layout>
